<h1><small><%= link_to @tournament.name, tournament_path(@tournament) %> /</small> Invite player</h1>

<%= form_for [@tournament, @invite], :html => {:class => 'form-horizontal'} do |f| %>
  <div class="control-group">
    <%= f.label :email, "Email", :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :email %>
    </div>
  </div>
  <div class="control-group">
    <div class="controls">
      <%= f.submit 'Invite', :class => 'btn btn-primary' %>
      <%= link_to 'Cancel', tournament_path(@tournament), :class => 'btn' %>
    </div>
  </div>
<% end %>
