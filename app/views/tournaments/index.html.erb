<div class="page-header">
  <h1>Tournaments</h1>
</div>

<ul class="nav nav-list">
  <li><%= link_to new_tournament_path do %>Start tournament (<%= current_user.tournaments.limit_left %> left)<% end %></li>
</ul>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
    </tr>
  </thead>
  <tbody>
    <% @tournaments.each do |tournament| %>
      <tr>
        <td><%= link_to tournament.name, tournament_path(tournament) %></td>
      </tr>
    <% end %>
    <% if @tournaments.empty? %>
      <tr>
        <td>You are not in any tournaments.</td>
      </tr>
    <% end %>
  </tbody>
</table>
